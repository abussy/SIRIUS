{
    "control" : {
        "processing_unit" : "cpu",
        "verbosity" : 2,
        "print_forces" : true,
        "print_stress" : true
    },

    "parameters" : {
        "electronic_structure_method" : "pseudopotential",
        "use_scf_correction" : false,

        "xc_functionals" : ["XC_GGA_X_PBE", "XC_GGA_C_PBE"],

        "smearing_width" : 0.00000001,

        "smearing": "fermi_dirac",

        "use_symmetry" : true,

        "gk_cutoff" : 6.0,
        "pw_cutoff" : 12.0,

        "energy_tol" : 1e-8,
        "density_tol" : 1e-8,

        "ngridk" : [2,2,2]
    },

    "iterative_solver" : {
        "type" : "exact"
    },

    "unit_cell" : {

        "lattice_vectors" : [ [0, 1, 1],
                              [1, 0, 1],
                              [1, 1, 0]
                            ],
        "lattice_vectors_scale" : 3.37,

        "atom_types" : ["C"],

        "atom_files" : {
            "C" : "C_molsim.upf.json"
        },

        "atoms" : {
            "C" : [
                [0.375, 0.375, 0.375],
                [-0.375, -0.375, -0.375]
            ]
        }
    }

}
